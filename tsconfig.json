{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "src",     
      "outDir": "public/assets/js" 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
